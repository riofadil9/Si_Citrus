<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Document</title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins:display=swap');
        *{
            font-family: "Poppins", sans-serif;
            padding: 0;
            margin: 0;
            text-align: center;
            justify-content: center;
            align-items: center;
            box-sizing: border-box;
        }
        header{
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            padding: 20px 100px;
            background: #28667E;
            display: flex;
            justify-content: space-between;
        }
        /* img{
            width: 300px;
            height: 144px;
        } */
        body{
            background-color: white;
        }
        /* .navigation img{
            display: flex;
            width: 80px;
            height: 80px;
            border-radius: 100%;
        } */
        #diagnosa{
            color: white;
            border-radius: 10%;
            text-decoration: none;
            padding: 5px;
            font-size: x-large;
        }
        a img{
            width: 58px;
            height: 51px;
        }
        .btnDiagnosa{
            display: flex;
            justify-content: center;
            align-items: center;
            /* width: 253px; */
            height: 83px;
            position: absolute;
            right: 50px;
            bottom: 50px;
        }
    </style>
</head>
<body class="w-full">
    <div class="h-14 lg:h-40"></div>
    <main class="relative">
        <!-- <h1><%= //username %></h1> -->
        <% artikel.forEach(artikel => { %>
            <form action="/login" method="POST">
                <input hidden ="px-3 mt-1 block h-12 w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" type="text" id="username" name="username" value="<%= artikel.username %>">
                <input hidden ="px-3 mt-1 block h-12 w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" type="password" id="pass" name="pass" value="<%= artikel.pass %>">
                <button class="flex w-full" type="submit">    
                    <div class=" flex-1 mx-8 mt-8 shadow-xl rounded-2xl p-2 hover:bg-blue-500 transition duration-300 ease-in-out">
                        <div class=" flex bg-transparent justify-start rounded-2xl p-2">
                            <div class="flex lg:h-60 justify-start items-center lg:p-5">
                                <div class="flex w-[9.5rem] lg:w-[19rem]">
                                    <img class="w-[10rem] h-28 lg:w-[20rem] lg:h-56 rounded-2xl" src="/uploads/img/<%= artikel.gambar %>" alt="">
                                </div>
                            </div>
                            <div class="flex flex-col justify-start items-start content-center text-[#28667E] ml-4">
                                <div class="flex-none h-6 lg:h-12 my-1 lg:my-5">
                                    <h3 class="font-semibold text-lg lg:text-4xl"><%= artikel.username %></h3>
                                </div>
                                <div class="lg:h-36 bg-transparent">
                                    <p class="text-left text-black text-sm lg:text-2xl pr-8 line-clamp-4 font-light">
                                        <%= artikel.email %> 
                                    </p>                        
                                </div>
                            </div>
                        </div>
                    </div>
                </button>
            </form>
        <% }); %>
            <!-- <a href="/createArtikel">Create New Article</a> -->
    </main>
    <header class="px-0 lg:px-28 py-1 lg:py-10">
        <a href="/">
            <img class="w-44 h-20 lg:w-72 lg:h-32" src="/uploads/img/Logo.png" alt="logo">
        </a>
        <nav class="flex gap-4 lg:gap-20 navigation pr-4">
            <!-- <form action="/search" class="flex" method="post">
                <input class="w-64 h-12 rounded-2xl text-sm lg:w-96 lg:h-14 lg:text-xl  lg:rounded-2xl" type="text" name="keyword" placeholder="Masukkan kata kunci pencarian">
                <button class="text-[#28667E] bg-white w-20 h-10 font-bold rounded-2xl" type="submit" hidden>Cari</button>
            </form> -->
            <a href="/akun">
                <img src="/uploads/img/<%= gambar %>" alt="">
            </a>
        </nav>
    </header>
</html>